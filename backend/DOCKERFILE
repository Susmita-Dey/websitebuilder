# Use official slim Python image
FROM python:3.10-slim

# Set the working directory to the container root (or omit WORKDIR entirely)
WORKDIR /backend

# Install required system packages
RUN apt-get update && apt-get install -y build-essential gcc curl && apt-get clean

# Copy all contents from the backend folder (where this Dockerfile is) into /backend
COPY . .

# Install Python dependencies
RUN pip install --upgrade pip && pip install -r requirements.txt

# Expose the port expected by Render
EXPOSE 10000

# Run the FastAPI app
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "10000"]
